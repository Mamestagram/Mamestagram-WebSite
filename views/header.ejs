<div class = "header">
    <a href = "/home"><img src = "/image/logo.png" class = "logo"></a>
    <h1 class = "title"><%= pageTitle %></h1>
    <ul class = "menu">
        <li class = "home"><a href = "/home"><div class = "home-text">Home</div></a></li>
        <li class = "leaderboard"><a href = "/leaderboard/mode=std/special=none"><div class = "leaderboard-text">Leaderboard</div></a></li>
        <li class = "community"><a href = "/community" target = "_blank" rel = "noopener noreferrer"><div class = "community-text">Community</div></a></li>
        <li class = "help"><div class = "help-text">Help</div></li>
        <% if (locals.loginf === true) { %>
            <li class = "playername"><button class = "login-text"><%= locals.username %></button></li>
        <% } else { %>
            <li class = "login"><button class = "login-text">Sign in</button></li>
        <% } %>
    </ul>
    <button class = "arrow"></button>
</div>
<div class = "header-mobile">
    <ul class = "menu">
        <li class = "home"><a href = "/home"><div class = "home-text">Home</div></a></li>
        <li class = "leaderboard"><a href = "/leaderboard/mode=std/special=none"><div class = "leaderboard-text">Leaderboard</div></a></li>
        <li class = "community"><a href = "/community" target = "_blank" rel = "noopener noreferrer"><div class = "community-text">Community</div></a></li>
        <li class = "help"><div class = "help-text">Help</div></li>
        <% if (locals.loginf === true) { %>
            <li class = "playername"><button class = "login-text"><%= locals.username %></button></li>
        <% } else { %>
            <li class = "login"><button class = "login-text">Sign in</button></li>
        <% } %>
    </ul>
</div>
<% if (locals.loginf === true) { %>
    <div class = "link-form">
        <a href = "/profile/id=<%= locals.userid %>/mode=std/special=none/bestpp=1&mostplays=1&recentplays=1">
            My Profile
        </a>
        <a href = "/logout">Sign out</a>
    </div>
<% } else { %>
    <div class = "login-form">
        <form action = "/login" method = "post">
            <div class = "username">
                <span class = "username-title">Username</span>
                <% if (err.includes("empname")) { %>
                    <span class = "errmsg">Enter your Username</span>
                <% } else if (err === "notfound") { %>
                    <span class = "errmsg">User not found</span>
                <% } %>
                <input type = "text" name = "username">
            </div>
            <div class = "password">
                <span class = "password-title">Password</span>
                <% if (err.includes("emppass")) { %>
                    <span class = "errmsg">Enter your Password</span>
                <% } else if (err === "wrongpass") { %>
                    <span class = "errmsg">Password is incorrect</span>
                <% } %>
                <input type = "password" name = "password">
            </div>
            <div class = "button">
                <input type = "submit" value = "Sign in">
            </div>
        </form>
    </div>
<% } %>
<% if (locals.failed === true) { %>
    <script>
        $(".login-form, .link-form").addClass("show").show();
    </script>
<% } %>