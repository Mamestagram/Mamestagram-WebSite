                    <li><div class="top-title"> vn!mania </div> <div class="top-name"> <br> <a href="https://web.mamesosu.net/profile/<%= maniatop.id %>/std"> <h1><%= maniatop.name %> </h1> PP: <%= maniatop.pp %> </a> </div> <br> <img src="https://a.mamesosu.net/<%= maniatop.id %>"></li>
                    <li><div class="top-title"> vn!taiko </div> <div class="top-name"> <br> <a href="https://web.mamesosu.net/profile/<%= taikotop.id %>/std"> <h1><%= taikotop.name %> </h1> PP: <%= taikotop.pp %> </a> </div><br> <img src="https://a.mamesosu.net/<%= taikotop.id %>"></li>
                    <li><div class="top-title"> rx!osu </div> <div class="top-name"> <br> <a href="https://web.mamesosu.net/profile/<%= stdrxtop.id %>/std"> <h1><%= stdrxtop.name %> </h1> PP: <%= stdrxtop.pp %> </a> </div><br> <img src="https://a.mamesosu.net/<%= stdrxtop.id %>"></li>
                    <li><div class="top-title"> rx!taiko </div> <div class="top-name"> <br> <a href="https://web.mamesosu.net/profile/<%= taikorxtop.id %>/std"> <h1><%= taikorxtop.name %> </h1> PP: <%= taikorxtop.pp %> </a> </div><br> <img src="https://a.mamesosu.net/<%= taikorxtop.id %>"></li>
                    <li><div class="top-title"> vn!osu </div> <div class="top-name">  <br> <a href="https://web.mamesosu.net/profile/<%= stdtop.id %>/std"> <h1><%= stdtop.name %> </h1> PP: <%= stdtop.pp %> </a> </div><br> <img src="https://a.mamesosu.net/<%= stdtop.id %>"></li>
                    <li><div class="top-title"> vn!mania </div> <div class="top-name"> <br> <a href="https://web.mamesosu.net/profile/<%= maniatop.id %>/std"> <h1><%= maniatop.name %> </h1> PP: <%= maniatop.pp %> </a> </div> <br> <img src="https://a.mamesosu.net/<%= maniatop.id %>"></li>
                    <li><div class="top-title"> vn!taiko </div> <div class="top-name"> <br> <a href="https://web.mamesosu.net/profile/<%= taikotop.id %>/std"> <h1><%= taikotop.name %> </h1> PP: <%= taikotop.pp %> </a> </div><br> <img src="https://a.mamesosu.net/<%= taikotop.id %>"></li>
