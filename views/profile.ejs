        <div class="box bestpp-list" id="bestpp">
            <div class="bestpp-header">
                <h1>Best Performance</h1>
                <div class="page">
                    <h2>page : <%= bppage %></h2>
                    <div class="pagearrow">
                        <% let page=Number(bppage); %>
                        <% if (page === 1) { %>
                            <a class="back" href="/profile/id=<%= id %>/mode=<%= mode %>/special=<%= sp %>/bestpp=<%= page - 1 %>&mostplays=<%= mppage %>&recentplays=<%= rspage %>#bestpp">
