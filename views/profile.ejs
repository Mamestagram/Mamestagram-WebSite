                    <% if (n >= page * amount - amount) {
                        display = true;
                    } %>
                    <% if (n >= page * amount) {
                        break;
                    } %>
                    <% if (display) { %>
                        <div class="list">
                            <% if (map.grade !== "F") { %>
                                <img src="/image/grade/<%= map.grade %>.png" class="grade">
                            <% } %>
