<!DOCTYPE html>
<html lang="ja">
    <head>
        <title>Rename</title>
        <%- include("link") %>
        <link rel="stylesheet" href="/css/rename.css">
        <style>
            body::-webkit-scrollbar-track {
                background-color: #fdfdfd;
            }
            body::-webkit-scrollbar-thumb {
                background-color: #3d3029;
            }

            header {
                background-color: transparent;
            }

            .animated {
                background-color: #ac6039;
            }

            .animated .pc li:hover {
                background-color: #ff9966;
            }

            @media (max-width: 1232px) {
                header {
                    background-color: #ac6039;
                }
            }

            .mobile {
                background-color: #24222a;
            }

            .mobile .leaderboard span {
                border-left: 3px solid #ff9966;
            }

            .mobile li:hover {
                background-color: rgba(253, 152, 101, 0.3);
            }

            .mobile .register, .mobile .login, .mobile .username {
                background-color: #3d3029;
                color: #d9b29e;
            }
            .mobile .register:hover, .mobile .login:hover, .mobile .username:hover {
                background-color: #3d3029;
            }

            .link-form a {
                background-color: #ac6039;
            }
            .link-form a:hover {
                background-color: #ff9966;
            }
        </style>
    </head>
    <body>
    <%- include("header") %>
    <main>
        <div class="rename-form">
            <form action="/rename" method="post">
                <h1 class="title">Rename</h1>
                <div class="username">
                    <span class="username-title">
                        Enter a new username below<br>
                        (within 20 characters)
                    </span>
                    <% if (err) { %>
                        <span class="errmsg"><%= err %></span>
                    <% } %>
                    <input type="text" name="username" value="<%= text %>">
                </div>
                <button><input type="submit" value="Confirm"></button>
            </form>
        </div>
    </main>
    <%- include("footer") %>
    </body>
</html>